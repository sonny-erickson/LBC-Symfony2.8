{% trans_default_domain 'FOSUserBundle' %}
<h1>Modifier le mot de passe</h1>
{{ form_start(form, { 'action': path('fos_user_change_password'), 'attr': { 'class': 'fos_user_change_password' } }) }}
    {{ form_widget(form) }}
    <div>
        <input class="deep-orange waves-light btn-small" type="submit" value="{{ 'change_password.submit'|trans }}" />
    </div>
{{ form_end(form) }}
{% block stylesheets %}
    <style>
        h1{font-size:2em;
            text-align: center;
            border-bottom: 1px black solid;
        }
    </style>
{% endblock %}